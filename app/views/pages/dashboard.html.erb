 <%= render 'layouts/header' %>
<div class="row">
<h1 class="text-center">Dashboard</h1>
<div class="col-md-4">

	<h3 class="text-center">
		Your Cinema Listings <%= link_to "Create New Cinema", new_listing_path, class: "btn btn-primary bt-sm" %></h3>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Movie</th>
			<th>Date</th>
			<th>Seats</th>
			<th>Venue Name</th>
			<th>Action</th>
			<th>Date created</th>
		</tr>
	</thead>
	<tbody>
		<% @listings.each do |listing| %>
		<tr>
			<td><%= link_to listing.title, listing_path(listing) %></td>
			<td><%= listing.date %></td>
			<td><%= listing.seats %></td>
			<td><%= listing.venue_name %></td>
			
			<td><%= link_to "Edit Movie", edit_listing_path(listing) %></td>
			<td>Published at <%= listing.created_at.strftime('%b %d, %y') %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
  <div class="col-md-4">
    <h3 class="text-center">
      Purchased Movies
    </h3>
  </div>
  <div class="col-md-4">
    <h3 class="text-center">
      Ticket Sales
    </h3>
  </div>
</div>