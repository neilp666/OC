<div class="row">
<h1 class="text-center">Dashboard</h1>
<div class="col-md-4">
<h3 class="text-center">
	<%= link_to "Create New Cinema", new_listing_path, class: "btn btn-primary btn-lg" %>
</h3>

<table class="table">
	<thead>
		<tr>
			<th>Movie</th>
			<th>Time</th>
			<th>Date</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @listings.each do |listing| %>
		<tr>
			<td><%= listing.title %></td>
			<td><%= listing.time %></td>
			<td><%= listing.date %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
  <div class="col-md-4">
    <h3 class="text-center">
      Purchased
    </h3>
  </div>
  <div class="col-md-4">
    <h3 class="text-center">
      Sales
    </h3>
  </div>
</div>